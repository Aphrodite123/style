<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/slide_home_rl"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hyunplayer_navigation_bg">

        <HorizontalScrollView
            android:id="@+id/actionbar_hsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/actionbar_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/actionbar_listen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/actionbar_listen_selected"/>

                    <ImageView
                        android:id="@+id/actionbar_watch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/actionbar_watch_selected"/>

                    <ImageView
                        android:id="@+id/actionbar_sing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/actionbar_sing_selected"/>
                </LinearLayout>

                <!-- indicator -->
                <View
                    android:id="@+id/horizontal_scroll_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
            </LinearLayout>

        </HorizontalScrollView>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/slide_home_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v4.view.ViewPager
            android:id="@+id/home_slide_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actionbar_hsv"/>
    </RelativeLayout>

    <include
        android:id="@+id/music_suspension_box"
        layout="@layout/layout_music_suspension_box"/>
</FrameLayout>
